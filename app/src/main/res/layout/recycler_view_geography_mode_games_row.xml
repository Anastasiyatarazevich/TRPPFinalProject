<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        app:cardBackgroundColor="@color/beige"
        app:cardCornerRadius="30dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="238dp">

            <ImageView
                android:id="@+id/imageView_game_result_logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="54dp"
                android:layout_marginBottom="54dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_trophy_logo" />

            <TextView
                android:id="@+id/textView_date_in_row"
                android:layout_width="260dp"
                android:layout_height="46dp"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/dark_blue"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView_game_result_logo"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_correct_answers_counter_in_row"
                android:layout_width="260dp"
                android:layout_height="46dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/dark_blue"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView_game_result_logo"
                app:layout_constraintTop_toBottomOf="@+id/textView_date_in_row" />

            <TextView
                android:id="@+id/textView_average_answers_counter_in_row"
                android:layout_width="260dp"
                android:layout_height="46dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/dark_blue"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView_game_result_logo"
                app:layout_constraintTop_toBottomOf="@+id/textView_correct_answers_counter_in_row" />

            <TextView
                android:id="@+id/textView_game_duration_in_row"
                android:layout_width="260dp"
                android:layout_height="46dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/dark_blue"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView_game_result_logo"
                app:layout_constraintTop_toBottomOf="@+id/textView_average_answers_counter_in_row" />

            <TextView
                android:id="@+id/textView_game_size_in_row"
                android:layout_width="260dp"
                android:layout_height="46dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/dark_blue"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView_game_result_logo"
                app:layout_constraintTop_toBottomOf="@+id/textView_game_duration_in_row" />

            <ImageView
                android:id="@+id/imageView_mode_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="45dp"
                android:layout_marginTop="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_mode"
                app:srcCompat="@drawable/ic_location_pin" />

            <TextView
                android:id="@+id/textView_mode"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:text="Mode"
                android:textColor="@color/dark_blue"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView_game_result_logo" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>