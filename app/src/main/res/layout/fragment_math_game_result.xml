<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout7"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    tools:context=".MathMode.MathGameResultFragment">


    <TextView
        android:id="@+id/textView_end_reason"
        android:layout_width="334dp"
        android:layout_height="370dp"
        android:layout_marginTop="168dp"
        android:background="@drawable/rounded_corner_button_15_radius"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_trophy"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="35dp"
        android:src="@drawable/ic_trophy_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="184dp"
        android:layout_height="48dp"
        android:layout_marginTop="176dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="Results"
        android:textColor="@color/dark_blue"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_date"
        android:layout_width="287dp"
        android:layout_height="51dp"
        android:layout_marginTop="240dp"
        android:fontFamily="@font/montserrat"
        android:text=""
        android:textColor="@color/dark_blue"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_correct_answer_counter"
        android:layout_width="287dp"
        android:layout_height="51dp"
        android:fontFamily="@font/montserrat"
        android:text=""
        android:textColor="@color/dark_blue"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_date" />

    <TextView
        android:id="@+id/textView_playTime"
        android:layout_width="287dp"
        android:layout_height="51dp"
        android:fontFamily="@font/montserrat"
        android:text=""
        android:textColor="@color/dark_blue"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_correct_answer_counter" />

    <TextView
        android:id="@+id/textView_average_answer_time"
        android:layout_width="287dp"
        android:layout_height="51dp"
        android:fontFamily="@font/montserrat"
        android:text=""
        android:textColor="@color/dark_blue"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_playTime" />

    <TextView
        android:id="@+id/textView_gameSize"
        android:layout_width="287dp"
        android:layout_height="51dp"
        android:fontFamily="@font/montserrat"
        android:text=""
        android:textColor="@color/dark_blue"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_average_answer_time" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="287dp"
        android:layout_height="51dp"
        android:fontFamily="@font/montserrat"
        android:text=""
        android:textColor="@color/dark_blue"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_gameSize" />

    <Button
        android:id="@+id/button_home"
        style="@style/MainButtonStyle"
        android:layout_width="146dp"
        android:layout_height="55dp"
        android:layout_marginBottom="100dp"
        android:text="Return to Home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>